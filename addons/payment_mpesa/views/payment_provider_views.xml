<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_mpesa" model="ir.ui.view">
        <field name="name">payment.provider.form.mpesa</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_credentials']" position="after">
                <group name="mpesa_credentials" invisible="code != 'mpesa'">
                    <group>
                        <field name="mpesa_consumer_key" password="True"/>
                        <field name="mpesa_consumer_secret" password="True"/>
                    </group>
                    <group>
                        <field name="mpesa_shortcode"/>
                        <field name="mpesa_passkey" password="True"/>
                        <label for="mpesa_callback_url"/>
                        <div class="o_row">
                            <field name="mpesa_callback_url" placeholder="e.g., https://yourdomain.com/payment/mpesa/callback"/>
                            <button name="action_reset_callback_url" type="object" string="Reset to Default" class="btn-link" icon="fa-refresh" invisible="code != 'mpesa'"/>
                        </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
