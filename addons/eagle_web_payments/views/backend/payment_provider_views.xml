<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="eagle_payment_provider_form" model="ir.ui.view">
        <field name="name">kPay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'eagle'"
                       name="eagle_credentials">
                    <field name="eagle_public_key"
                           string="Public Key"
                           required="code == 'eagle' and state != 'disabled'"/>
                    <field name="eagle_api_key"
                           string="API Key"
                           required="code == 'eagle' and state != 'disabled'"
                           password="True"/>
                    <field name="eagle_client_id"
                           string="Client ID"
                           required="code == 'eagle' and state != 'disabled'"
                           password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
