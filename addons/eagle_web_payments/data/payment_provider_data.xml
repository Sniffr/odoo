<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">


    <record id="payment_provider_eagle" model="payment.provider">
        <field name="name">Eagle</field>
        <field name="code">eagle</field>
        <field name="allow_tokenization">True</field>
        <field name="pending_msg">A Confirmation message has been sent to your phone.Please enter the PIN to confirm the payment!</field>
        <field name="image_128" type="base64" file="eagle_web_payments/static/description/icon.png" />
        <field name="module_id" ref="base.module_eagle_web_payments" />
        <field name="payment_method_ids"
            eval="[Command.set([
                         ref('eagle_web_payments.payment_method_mtn'),
                         ref('eagle_web_payments.payment_method_airtel'),
                         ref('eagle_web_payments.payment_method_mpesa'),
                     ])]"
        />
    </record>
   

   

</odoo>