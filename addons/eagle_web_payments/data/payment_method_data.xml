<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">


    <record id="payment_method_mtn" model="payment.method">
        <field name="name">MTN Mobile Money</field>
        <field name="code">eagle_mtn</field>
        <field name="sequence">31</field>
        <field name="active">False</field>
        <field name="image" type="base64" file="eagle_web_payments/static/assets/mtn.png"/>
        <field name="support_tokenization">True</field>
        <field name="support_express_checkout">True</field>
        <field name="support_refund">none</field>
        <field name="supported_country_ids"
               eval="[Command.set([
                         ref('base.ug'),
                     ])]"
        />
        <field name="supported_currency_ids"
               eval="[Command.set([
                         ref('base.UGX'),
                     ])]"
        />
    </record>


