<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer List View (Partners from Appointments) -->
    <record id="appointment_customer_list_view" model="ir.ui.view">
        <field name="name">res.partner.appointment.customer.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="appointment_count" string="Total Appointments"/>
                <field name="total_paid_amount" string="Total Paid"/>
                <field name="create_date" string="First Booking"/>
            </list>
        </field>
    </record>

    <!-- Customer Form View (Enhanced for Appointments) -->
    <record id="appointment_customer_form_view" model="ir.ui.view">
        <field name="name">res.partner.appointment.customer.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_appointments" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="appointment_count" widget="statinfo" string="Appointments"/>
                        </button>
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="total_paid_amount" widget="monetary" string="Total Paid"/>
                        </button>
                    </div>
                    
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920', 'size': [90, 90]}"/>
                    
                    <group>
                        <group string="Customer Information">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>
                        <group string="Appointment Statistics">
                            <field name="appointment_count"/>
                            <field name="total_paid_amount"/>
                            <field name="create_date" string="Customer Since"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Appointments">
                            <field name="appointment_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="service_id"/>
                                    <field name="staff_member_id"/>
                                    <field name="start"/>
                                    <field name="price"/>
                                    <field name="payment_status"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Payment Transactions">
                            <field name="payment_transaction_ids">
                                <list>
                                    <field name="reference"/>
                                    <field name="provider_id"/>
                                    <field name="amount"/>
                                    <field name="currency_id"/>
                                    <field name="state"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Contact Details">
                            <group>
                                <group>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="state_id"/>
                                    <field name="zip"/>
                                    <field name="country_id"/>
                                </group>
                                <group>
                                    <field name="website"/>
                                    <field name="comment" placeholder="Internal notes..."/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Customer Search View -->
    <record id="appointment_customer_search_view" model="ir.ui.view">
        <field name="name">res.partner.appointment.customer.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <filter string="Has Appointments" name="has_appointments" domain="[('appointment_count', '>', 0)]"/>
                <filter string="Has Paid" name="has_paid" domain="[('total_paid_amount', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Create Date" name="group_by_create_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Customer Action (Customers from Appointments) -->
    <record id="appointment_customer_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'list', 'view_id': ref('appointment_customer_list_view')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('appointment_customer_form_view')})]"/>
        <field name="search_view_id" ref="appointment_customer_search_view"/>
        <field name="domain">[('appointment_count', '>', 0)]</field>
        <field name="context">{'search_default_has_appointments': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No customers found!
            </p>
            <p>
                Customers who book appointments will appear here. You can view their appointment history and payment information.
            </p>
        </field>
    </record>

    <!-- Payment Transaction List View for Appointments -->
    <record id="appointment_payment_transaction_list_view" model="ir.ui.view">
        <field name="name">payment.transaction.appointment.list</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <list>
                <field name="reference"/>
                <field name="partner_id"/>
                <field name="provider_id"/>
                <field name="payment_method_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="state" decoration-success="state=='done'" decoration-danger="state in ('error', 'cancel')" decoration-warning="state=='pending'"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Payment Transaction Form View for Appointments -->
    <record id="appointment_payment_transaction_form_view" model="ir.ui.view">
        <field name="name">payment.transaction.appointment.form</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,authorized,done"/>
                </header>
                <sheet>
                    <group>
                        <group string="Transaction Details">
                            <field name="reference"/>
                            <field name="provider_id"/>
                            <field name="payment_method_id"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                        </group>
                        <group string="Customer Information">
                            <field name="partner_id"/>
                            <field name="partner_name"/>
                            <field name="partner_email"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Status">
                            <field name="state"/>
                            <field name="create_date"/>
                            <field name="last_state_change"/>
                        </group>
                        <group string="Related Appointment">
                            <field name="appointment_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payment Transaction Search View -->
    <record id="appointment_payment_transaction_search_view" model="ir.ui.view">
        <field name="name">payment.transaction.appointment.search</field>
        <field name="model">payment.transaction</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="partner_id"/>
                <field name="provider_id"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Error" name="error" domain="[('state', 'in', ['error', 'cancel'])]"/>
                <filter string="Today" name="today" domain="[('create_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('create_date', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Provider" name="group_by_provider" context="{'group_by': 'provider_id'}"/>
                    <filter string="Customer" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment Transaction Action -->
    <record id="appointment_payment_transaction_action" model="ir.actions.act_window">
        <field name="name">Payment Transactions</field>
        <field name="res_model">payment.transaction</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'list', 'view_id': ref('appointment_payment_transaction_list_view')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('appointment_payment_transaction_form_view')})]"/>
        <field name="search_view_id" ref="appointment_payment_transaction_search_view"/>
        <field name="domain">[('appointment_id', '!=', False)]</field>
        <field name="context">{'search_default_done': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payment transactions found!
            </p>
            <p>
                Payment transactions from appointment bookings will appear here.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="customers_menu" 
              name="Customers" 
              parent="appointments_main_menu"
              action="appointment_customer_action"
              sequence="80"/>
              
    <menuitem id="payments_menu" 
              name="Payments" 
              parent="appointments_main_menu"
              action="appointment_payment_transaction_action"
              sequence="90"/>
</odoo>
