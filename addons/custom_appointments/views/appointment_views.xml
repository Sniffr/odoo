<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Search View -->
    <record id="appointment_search_view" model="ir.ui.view">
        <field name="name">custom.appointment.search</field>
        <field name="model">custom.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="service_id"/>
                <field name="staff_member_id"/>
                <field name="branch_id"/>
                <field name="promo_id"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Today" name="today" domain="[('start', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00')), ('start', '&lt;=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="All" name="all" domain="[]"/>
                <filter string="With Promo Code" name="with_promo" domain="[('promo_id', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Staff Member" name="group_by_staff" context="{'group_by': 'staff_member_id'}"/>
                    <filter string="Branch" name="group_by_branch" context="{'group_by': 'branch_id'}"/>
                    <filter string="Promo Code" name="group_by_promo" context="{'group_by': 'promo_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Appointment List View -->
    <record id="appointment_list_view" model="ir.ui.view">
        <field name="name">custom.appointment.list</field>
        <field name="model">custom.appointment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="service_id"/>
                <field name="staff_member_id"/>
                <field name="branch_id"/>
                <field name="start"/>
                <field name="duration"/>
                <field name="price"/>
                <field name="payment_status"/>
                <field name="state" decoration-success="state=='completed'" decoration-info="state=='confirmed'" decoration-warning="state=='in_progress'" decoration-danger="state=='cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Appointment Form View -->
    <record id="appointment_form_view" model="ir.ui.view">
        <field name="name">custom.appointment.form</field>
        <field name="model">custom.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_complete" string="Complete" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'confirmed')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="invoice_count > 0">
                            <span>Create Invoice</span>
                        </button>
                        <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statinfo" string="Invoice"/>
                        </button>
                        <button name="action_view_payment" type="object" class="oe_stat_button" icon="fa-money" invisible="payment_count == 0">
                            <field name="payment_count" widget="statinfo" string="Payment"/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Appointment Details">
                            <field name="name"/>
                            <field name="service_id"/>
                            <field name="staff_member_id"/>
                            <field name="branch_id"/>
                        </group>
                        <group string="Customer Information">
                            <field name="partner_id"/>
                            <field name="customer_name"/>
                            <field name="customer_email"/>
                            <field name="customer_phone"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Timing">
                            <field name="start"/>
                            <field name="stop"/>
                            <field name="duration"/>
                        </group>
                        <group string="Pricing">
                            <field name="price"/>
                            <field name="discount_amount"/>
                            <field name="final_price"/>
                            <field name="currency_id"/>
                        </group>
                        <group string="Promo Code">
                            <field name="promo_id"/>
                            <field name="promo_code_entered"/>
                        </group>
                        <group string="Payment Information">
                            <field name="payment_status"/>
                            <field name="payment_transaction_id" readonly="1"/>
                            <field name="payment_method" readonly="1"/>
                            <field name="paid_amount" readonly="1"/>
                            <field name="payment_date" readonly="1"/>
                            <field name="payment_reference" readonly="1"/>
                            <field name="payment_id" readonly="1"/>
                        </group>
                        <group string="Invoice Information">
                            <field name="invoice_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Internal Notes">
                            <field name="internal_notes"/>
                        </page>
                        <page string="Calendar Details">
                            <group>
                                <field name="user_id"/>
                                <field name="calendar_event_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Follow-up &amp; Feedback" invisible="state not in ('completed', 'cancelled')">
                            <group>
                                <group string="Follow-up Status">
                                    <field name="followup_status" readonly="1"/>
                                    <field name="followup_sent_at" readonly="1"/>
                                    <field name="followup_email_sent" readonly="1"/>
                                    <field name="followup_sms_sent" readonly="1"/>
                                </group>
                                <group string="Customer Feedback">
                                    <field name="feedback_rating" readonly="1"/>
                                    <field name="feedback_submitted_at" readonly="1"/>
                                </group>
                            </group>
                            <group string="Feedback Comment" invisible="not feedback_comment">
                                <field name="feedback_comment" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Appointment Calendar View -->
    <record id="appointment_calendar_view" model="ir.ui.view">
        <field name="name">custom.appointment.calendar</field>
        <field name="model">custom.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="start" date_stop="stop" color="staff_member_id" mode="month">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="service_id"/>
                <field name="staff_member_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Appointment Kanban View -->
    <record id="appointment_kanban_view" model="ir.ui.view">
        <field name="name">custom.appointment.kanban</field>
        <field name="model">custom.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="service_id"/>
                <field name="staff_member_id"/>
                <field name="start"/>
                <field name="price"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="customer_name"/> - <field name="service_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="staff_member_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="start" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Appointment Action -->
    <record id="appointment_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">custom.appointment</field>
        <field name="view_mode">list,form,calendar,kanban</field>
        <field name="search_view_id" ref="appointment_search_view"/>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule your first appointment!
            </p>
            <p>
                Create and manage customer appointments with your staff members.
            </p>
        </field>
    </record>

    <!-- My Appointments Action (for logged-in users) -->
    <record id="my_appointments_action" model="ir.actions.act_window">
        <field name="name">My Appointments</field>
        <field name="res_model">custom.appointment</field>
        <field name="view_mode">list,form,calendar,kanban</field>
        <field name="domain">[
            '|',
            ('user_id', '=', uid),
            ('staff_member_id.employee_id.user_id', '=', uid)
        ]</field>
        <field name="context">{'search_default_my_appointments': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments found!
            </p>
            <p>
                Your appointments will appear here. This includes appointments where you are the responsible user or linked staff member.
            </p>
        </field>
    </record>

    <!-- Customer Appointments Action (for customers who booked via website) -->
    <record id="customer_appointments_action" model="ir.actions.act_window">
        <field name="name">Customer Appointments</field>
        <field name="res_model">custom.appointment</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="domain">[('customer_email', '=', user.email)]</field>
        <field name="context">{'search_default_customer_appointments': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments found!
            </p>
            <p>
                Your booked appointments will appear here based on your email address.
            </p>
        </field>
    </record>

    <!-- Menu Items - Integrated into Appointments -->
    <menuitem id="appointments_menu" 
              name="All Appointments" 
              parent="appointments_main_menu"
              action="appointment_action"
              sequence="50"/>
              
    <menuitem id="my_appointments_menu" 
              name="My Appointments" 
              parent="appointments_main_menu"
              action="my_appointments_action"
              sequence="60"/>
              
    <menuitem id="customer_appointments_menu" 
              name="My Bookings" 
              parent="appointments_main_menu"
              action="customer_appointments_action"
              sequence="70"
              groups="base.group_portal,base.group_public"/>
</odoo>
