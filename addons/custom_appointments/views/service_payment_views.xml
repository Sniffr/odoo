<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Payment Settings - Inherited View -->
    <record id="service_form_view_payment" model="ir.ui.view">
        <field name="name">company.service.form.payment</field>
        <field name="model">company.service</field>
        <field name="inherit_id" ref="service_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@string='Booking Settings']" position="after">
                <page string="Payment Settings">
                    <group>
                        <group>
                            <field name="fee_type" widget="radio"/>
                            <field name="booking_fee" invisible="fee_type == 'full'"/>
                            <field name="booking_fee_percentage" invisible="fee_type == 'full'" readonly="1"/>
                        </group>
                        <group>
                            <label for="price" string="Full Price"/>
                            <div>
                                <field name="price" class="oe_inline"/> 
                                <field name="currency_id" class="oe_inline" readonly="1"/>
                            </div>
                        </group>
                    </group>
                    <div invisible="fee_type == 'full'" class="alert alert-info" role="alert">
                        <strong>Booking Fee Configuration:</strong><br/>
                        Customers will pay the booking fee upfront. The remaining balance will be due at the appointment.
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
