<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled Action for Appointment Reminders -->
    <record id="appointment_reminder_cron" model="ir.cron">
        <field name="name">Send Appointment Reminders</field>
        <field name="model_id" ref="model_custom_appointment"/>
        <field name="state">code</field>
        <field name="code">model.send_appointment_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
    
    <!-- Scheduled Action for Post-Appointment Follow-ups -->
    <record id="appointment_followup_cron" model="ir.cron">
        <field name="name">Send Appointment Follow-ups</field>
        <field name="model_id" ref="model_custom_appointment"/>
        <field name="state">code</field>
        <field name="code">model.send_appointment_followups()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
