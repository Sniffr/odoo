<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled Action for Appointment Reminders (24h before) -->
    <record id="appointment_reminder_cron" model="ir.cron">
        <field name="name">Send Appointment Reminders</field>
        <field name="model_id" ref="model_custom_appointment"/>
        <field name="state">code</field>
        <field name="code">model.send_appointment_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Scheduled Action for Follow-up Reminders (after appointment completion) -->
    <record id="followup_reminder_cron" model="ir.cron">
        <field name="name">Send Follow-up Reminders</field>
        <field name="model_id" ref="model_custom_appointment"/>
        <field name="state">code</field>
        <field name="code">model.send_followup_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
