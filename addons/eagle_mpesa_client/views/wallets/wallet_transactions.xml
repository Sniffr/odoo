<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wallet_transaction_search" model="ir.ui.view">
        <field name="name">wallet.transaction.search</field>
        <field name="model">wallet.transaction</field>
        <field name="arch" type="xml">
            <search string="Wallet Transactions">
                <field name="transaction_type" />
                
                <filter string="Received" name="received"
                    domain="[('transaction_type', 'in', ['wallet_in','deposit'])]" />

                <filter string="Sent" name="sent"
                    domain="[('transaction_type', 'in', ['wallet_out','disbursement','withdrawal'])]" />



            </search>
        </field>
    </record>


    <!--===============
    Wallet Transactions TREE VIEW===================-->
    <record id="wallet_transaction_list_received" model="ir.ui.view">
        <field name="name">wallet.transaction.list</field>
        <field name="model">wallet.transaction</field>
        <field name="arch" type="xml">
            <list string="Wallet Transactions" create="0">
                <field name="transaction_time"/>
                <field name="transaction_id"/>
                <field name="transaction_type" />
              
                <field name="sender"/>
                <field name="currency_id" column_invisible="1" />
                <field name="amount_received" sum="Total Received" string="Amount"
                    options="{'currency_field': 'currency_id'}"
                    widget="monetary" />
               
                <field name="charged_fees" optional="hide" />
                <field name="date" string="Date" />

                     
            </list>
        </field>
    </record>
    <record id="wallet_transaction_list_sent" model="ir.ui.view">
        <field name="name">wallet.transaction.list</field>
        <field name="model">wallet.transaction</field>
        <field name="arch" type="xml">
            <list string="Wallet Transactions" create="0">
                <field name="transaction_time"/>
                <field name="transaction_id"/>
                <field name="transaction_type" />
               
                <field name="currency_id" column_invisible="1" />
                <field name="sender"/>
                <field name="amount_received" sum="Total Received" string="Amount"
                    options="{'currency_field': 'currency_id'}"
                    widget="monetary" optional="hide" />
            
                <field name="comment" optional="hide" />
                <field name="date" string="Date" />

            </list>
        </field>
    </record>
    <record id="wallet_transaction_list_charged" model="ir.ui.view">
        <field name="name">wallet.transaction.list</field>
        <field name="model">wallet.transaction</field>
        <field name="arch" type="xml">
            <list string="Wallet Transactions" create="0">
                 <field name="transaction_time"/>
                <field name="transaction_id"/>
                <field name="transaction_type" />
               
                <field name="sender"/>
                
                <field name="currency_id" column_invisible="1" />

                <field name="amount_sent" sum="Total Sent"
                    options="{'currency_field': 'currency_id'}"
                    widget="monetary" />
                  
                <field name="comment" optional="hide" />
                <field name="date" string="Date" />

            </list>
        </field>
    </record>

        <record id="wallet_transaction_form_view" model="ir.ui.view">
    <field name="name">wallet.transaction.form</field>
    <field name="model">wallet.transaction</field>
    <field name="arch" type="xml">
        <form string="Deposit" readonly="1">
            <sheet>
                <group>
                    <group>
                        <field name="transaction_type"/>
                        <field name="currency_id"/>
                                                 <field name="transaction_time"/>
                        <field name="date"/>
                    </group>
                    <group>
                <field name="transaction_id"/>
                        <field name="sender"/>
                        <field name="amount_received" string="Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="charged_fees" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </group>
                <group>
                    <field name="comment"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

    <!--===========================Request
    Disbursements ACTION WINDOW========================-->
    <record id="wallet_transaction_action" model="ir.actions.act_window">
        <field name="name">Deposits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wallet.transaction</field>
        <field name="view_mode">list,search</field>
        <field name="search_view_id" ref="wallet_transaction_search" />
        <field name="domain">[('transaction_type','in',['wallet_in','deposit'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Wallet Transactions
            </p>
        </field>
    </record>
    <!-- Excel -->

</odoo>