<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="funds_request_search" model="ir.ui.view">
        <field name="name">funds_request.search</field>
        <field name="model">funds.request</field>
        <field name="arch" type="xml">
            <search string="Funds Requests">
                <field name="user_id" />
                <field name="wallet_id"  />
      
                <field name="state" />
                <filter string="State" name="dp_status"
                    context="{'group_by':'state'}"></filter>

            
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />

                <filter string="Confirmed" name="confirmed"
                    domain="[('state', '=', 'confirmed')]" />

                <filter string="Approved" name="approved"
                    domain="[('state', '=', 'approved')]" />
                <filter string="Rejected" name="rejected"
                    domain="[('state', '=', 'rejected')]" />


            </search>
        </field>
    </record>

    <record id="funds_request_form" model="ir.ui.view">
        <field name="name">funds_request.form</field>
        <field name="model">funds.request</field>
        <field name="arch" type="xml">
            <form string="Funds Request">
                <header>
                    <field name="creater" invisible="1" />
                    <field name="receiver" invisible="1"/>
                    <field name="preapprover" invisible="1"/>
                    <button name="action_confirm" type="object" string="Confirm"
                        invisible="state != 'draft' or not creater" class="btn btn-warning" />
                    <!-- <button name="action_approve" type="object" string="Pre-Approve"
                        invisible="state != 'confirmed' or creater or receiver or message"
                        class="btn btn-success"
                        groups="eagle_mpesa_client.group_kpayment_approver_wallet" /> -->
                      <button name="action_pre_approve" type="object" string="Pre-Approve"
                        invisible="state != 'confirmed' or creater or receiver"
                        class="btn btn-success"
                        groups="eagle_mpesa_client.group_kpayment_approver_wallet_one" />
                    <!-- <button name="action_approve" type="object" string="Approve"
                        invisible="state != 'pre_approved' or creater or receiver or preapprover or message"
                        class="btn btn-success"
                        groups="eagle_mpesa_client.group_kpayment_approver_wallet" /> -->
                     <button name="action_approve" type="object" string="Approve"
                        invisible="state != 'pre_approved' or creater or receiver or preapprover"
                        class="btn btn-success"
                        groups="eagle_mpesa_client.group_kpayment_approver_wallet_two" />
                    <!-- <button name="action_reject" type="object" string="Reject"
                        invisible="state not in ['confirmed','pre_approved'] or creater or receiver or preapprover" class="btn btn-danger"
                        groups="eagle_mpesa_client.group_kpayment_approver_wallet" /> -->
                     <button name="action_reject" type="object" string="Reject"
                        invisible="state not in ['confirmed','pre_approved']" class="btn btn-danger"
                        groups="eagle_mpesa_client.group_kpayment_approver_wallet" />



                    <field name="state"
                        widget="statusbar" />
                </header>
                <div class="alert alert-danger text-center o_form_header alert-dismissible"
                    invisible="1" role="status">
                    <!-- <button class="btn-close" data-bs-dismiss="alert" aria-label="Close" /> -->
                    <div>           
                        <!-- <field name="message" readonly="1"/>                     -->
                    </div>

                </div>
                <sheet>
                    <div name="button_box" class="oe_button_box" position="inside">

                    </div>
                  
                    <div class="oe_title">

                        <span class="o_form_label">Funds Request</span>
                        <h1>
                            <field name="name" readonly="1" force_save="1" />
                        </h1>

                    </div>
                    
                    <br />

                    <group>
                        <group>
                            <field name="state" invisible="1" />
                            <field name="user_id" readonly="1" force_save="1" invisible="1" />
                            <field name="wallet_id" readonly="state != 'draft'"
                                force_save="1"
                                options="{'no_open': True, 'no_create': True}"
                                required="1"
                                 />
                            <field name="id" invisible="1" />
                            <field name="create_uid" invisible="not id" readonly="1"
                                string="Initiated By" />
                            <field name="company_id" force_save="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="amount" readonly="state != 'draft'"
                                required="1" />
                            <!-- <field name="company_id" readonly="company_id" /> -->
                            
                            <field name="reason_for_reject_id" readonly="1" invisible="not reason_for_reject_id"/>
                           
                        </group>
                    </group>
                    <notebook>
                        <page name="notes" string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                  
                </sheet>

                <!--Chatter-->
                <chatter />
            </form>
        </field>
    </record>


    <!--===============Company
    Deposit TREE VIEW===================-->
    <record id="funds_request_list" model="ir.ui.view">
        <field name="name">funds_request.list</field>
        <field name="model">funds.request</field>
        <field name="arch" type="xml">
            <list string="Funds Requests">
                <field name="name" />
                <field name="wallet_id" />

                <field name="amount"
                    sum="Total"
                    options="{'currency_field': 'currency_id'}"
                    widget="monetary" />
                <field name="currency_id" column_invisible="1" />

                <field name="create_date" string="Date" />
                <field name="create_uid" string="Created By" optional="show" />

                <field name="state"
                    widget="badge" readonly="1"
                    decoration-success="state == 'approved'"
                    decoration-danger="state == 'rejected'"
                    decoration-warning="state == 'confirmed'"
                />
            </list>
        </field>
    </record>

    <record id="funds_request_action" model="ir.actions.act_window">
        <field name="name">Funds Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">funds.request</field>
        <field name="view_mode">list,form,search</field>
        <field name="view_id" ref="eagle_mpesa_client.funds_request_list" />
        <field name="search_view_id" ref="funds_request_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Funds Request
            </p>
        </field>
    </record>
    <record id="funds_request_action_approval" model="ir.actions.act_window">
        <field name="name">Funds Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">funds.request</field>
        <field name="view_mode">list,form,search</field>
        <field name="view_id" ref="eagle_mpesa_client.funds_request_list" />
        <field name="search_view_id" ref="funds_request_search" />
        <field name="context">{'search_default_confirmed':1,}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Funds Request
            </p>
        </field>
    </record>

</odoo>