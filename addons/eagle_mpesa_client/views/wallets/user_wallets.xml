<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--===============user WALLETS
    SEARCH===================-->
    <record id="user_wallet_search" model="ir.ui.view">
        <field name="name">user.wallet.search</field>
        <field name="model">user.wallet</field>
        <field name="arch" type="xml">
            <search string="Wallet">
                <field name="user_id" />
                <field name="company_wallet" />
                <filter string="Company Wallet" name="is_ompany_wallet"
                    domain="[('company_wallet', '=', True)]" />

            </search>
        </field>
    </record>

    <!--===============user
    WALLETS FORM VIEW===================-->
    <record id="user_wallet_form" model="ir.ui.view">
        <field name="name">user.wallet.form</field>
        <field name="model">user.wallet</field>
        <field name="arch" type="xml">
            <form string="Wallet">
                <header>
                    <button name="activate_on_eagle" string="Activate Wallet" class="btn-success" invisible="eagle_status == 'active'" groups="base.group_system" type="object"/>
                    <button name="activate_on_eagle" string="Fetch Transactions" class="btn-success" invisible="eagle_status != 'active'" groups="base.group_system" type="object"/>
                    <!-- <button name="allocate_funds" string="Allocate Funds" class="btn-warning" invisible="eagle_status != 'active' or not company_wallet" groups="base.group_system" type="object"/> -->
                    <field name="company_wallet" invisible="1" />
                    <field name="eagle_status" widget="statusbar"/>
                </header>
                
                <div class="alert alert-success text-center o_form_header alert-dismissible"
                    invisible="1" role="status">
                    <!-- <button class="btn-close" data-bs-dismiss="alert" aria-label="Close" /> -->
                    <div>
                        You can only make payments from your wallet and must have above company minimum set amount
                    </div>

                </div>
                <sheet>
                    <div name="button_box" class="oe_button_box" position="inside">
                      
                     </div>
                    <div class="oe_title">

                        <span class="o_form_label">Wallet</span>
                        <h1>
                            <field name="name" readonly="1" force_save="1" />
                        </h1>

                    </div>
                    
                    <group>
                        <group>
                            <field name="user_id" readonly="eagle_status in ('active')"  invisible="partner_id"  widget="res_user_many2one" />
                            <field name="partner_id" readonly="eagle_status in ('active')" invisible="user_id" widget="res_user_many2one" />
                        </group>
                        <group>
                            <field name="wallet_balance" readonly="1" />
                            <!-- <field name="monthly_budget" invisible="company_wallet"/> -->
                        </group>
                    </group>
                    <notebook>

                        <page name="wallet_transactions" string="Wallet Transactions">
                            <group>
                                <field name="wallet_transaction_ids" nolabel="1" colspan="2"
                                    readonly="1"
                                    class="w-100">
                                    <list>
                                        <field name="transaction_time"/>
                                        <field name="transaction_id"/>
                                        <field name="transaction_type" />
                                        <field name="currency_id" column_invisible="1" />
                                        <field name="sender"/>
                                        <field name="amount_received" sum="Total Received"
                                            options="{'currency_field': 'currency_id'}"
                                            widget="monetary" />
                                        <field name="amount_sent" sum="Total Sent"
                                            options="{'currency_field': 'currency_id'}"
                                            widget="monetary" />
                                        <field name="charged_fees" sum="Total Charges"
                                        options="{'currency_field': 'currency_id'}"
                                        widget="monetary" />
                                        <field name="phone_number"/>
                                        <field name="date"/>
                                        <field name="comment"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                      
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!--===============user
    WALLETS TREE VIEW===================-->
    <record id="user_wallet_list" model="ir.ui.view">
        <field name="name">user.wallet.list</field>
        <field name="model">user.wallet</field>
        <field name="arch" type="xml">
            <list string="Wallet">
                <header>
                    <!-- <button name="force_journal" type="object" string="FIX" /> -->
                </header>
                <field name="user_id" readonly="1" />
                <field name="name" readonly="1" />
                <field name="wallet_balance" sum="Total" readonly="1"
                    options="{'currency_field': 'currency_id'}" widget="monetary" />
                <!-- <field name="company_wallet" readonly="1" /> -->
                <field name="currency_id" column_invisible="1" readonly="1" />
                <!-- <field name="eagle_status"/> -->

            </list>
        </field>
    </record>

    <!--===========================user
    WALLETS ACTION WINDOW========================-->
    <record id="user_wallet_action" model="ir.actions.act_window">
        <field name="name">Wallet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">user.wallet</field>
        <field name="view_mode">list,form,search</field>
        <field name="search_view_id" ref="user_wallet_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Wallet
            </p>
        </field>
    </record>
</odoo>