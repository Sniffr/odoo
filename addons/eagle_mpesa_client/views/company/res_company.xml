<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_company_kpayments_inherit">
        <field name="name">kPayments Company Form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            
            <page name="branches" position="after">
                <page name="kpayments" string="Eagle" groups="base.group_system">
                    <group>
                        <group>
                            <field name="eagle_user_name" password="True" />
                            <field name="eagle_api_key" password="True"/>

                        </group>
                        <group>
                            <field name="hippo_client_id" password="True"/>
                            <field name="hippo_api_key" password="True" />
                            <field name="hippo_public_key"/>

                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>