<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.sacco</field>
			<field name="model">res.config.settings</field>
			<field name="priority" eval="40" />
			<field name="inherit_id"
				ref="base.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//form" position="inside">
					<app data-string="app_settings_block" string="Eagle" name="eagle_mpesa_client"
						groups="base.group_system" id="eagle_settings"
						data-key="sacco_base">
                        <block title="Eagle Set-up" id="eagle">
								<setting help="Enable Kola Mpesa">
									<field name="enable_kola_mpesa" />
								</setting>
								<!-- <setting help="Default Petty Cash Payment Method.">
									<field name="petty_payment_method_line_id" context="{'show_payment_journal_id': 1}" options="{'no_open': True, 'no_create': True}" />
								</setting>
								<setting help="Default Eagle Expense Category.">
									<field name="eagle_expense_category_id"  options="{'no_open': True, 'no_create': True}" />
								</setting> -->
							</block>
						
                            

						
					</app>
				</xpath>
			</field>
		</record>

		<record id="action_eagle_config_settings" model="ir.actions.act_window">
			<field name="name">Settings</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.config.settings</field>
			<field name="view_id" ref="res_config_settings_view_form" />
			<field name="view_mode">form</field>
			<field name="target">inline</field>
			<field name="context">{'module' : 'eagle_mpesa_client'}</field>
		</record>


	</data>
</odoo>
