<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_kpayment">
        <field name="name">Eagle</field>
        <field name="description">Helps determine who sees allthe disbursements and who manages company
            wallet(wallet Admin)</field>
        <field name="sequence">21</field>
    </record>

    <record id="group_kpayment_user" model="res.groups">
        <field name="name">Basic User</field>
        <field name="category_id" ref="module_category_kpayment" />
    </record>
    <record id="group_kpayment_accountant" model="res.groups">
        <field name="name">Accountant (ACCT)</field>
        <field name="category_id" ref="module_category_kpayment" />
        <field name="implied_ids" eval="[(4, ref('group_kpayment_user'))]" />
    </record>
    <record id="group_kpayment_cfo" model="res.groups">
        <field name="name">Chief Financial Officer</field>
        <field name="category_id" ref="module_category_kpayment" />
        <field name="implied_ids" eval="[(4, ref('group_kpayment_accountant'))]" />
        <!-- <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" /> -->
    </record>

    <record id="group_kpayment_manager" model="res.groups">
        <field name="name">Managing Director</field>
        <field name="category_id" ref="module_category_kpayment" />
        <field name="implied_ids" eval="[(4, ref('group_kpayment_cfo'))]" />
        <!-- <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" /> -->
    </record>

    <record model="ir.module.category" id="module_category_kpayment_approvers">
        <field name="name">Eagle Approvers</field>
        <field name="description">Helps determine who approves deposits and allocations</field>
        <field name="sequence">21</field>
    </record>

    <record id="group_kpayment_approver_wallet" model="res.groups">
        <field name="name">Funds Requests</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
    </record>
    <record id="group_kpayment_approver_wallet_one" model="res.groups">
        <field name="name">FR Pre-Approver</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
        <field name="implied_ids" eval="[(4, ref('group_kpayment_approver_wallet'))]" />

    </record>
    <record id="group_kpayment_approver_wallet_two" model="res.groups">
        <field name="name">FR Approver</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
        <field name="implied_ids" eval="[(4, ref('group_kpayment_approver_wallet'))]" />
    </record>

    <record id="group_kpayment_approver_batch_confirm" model="res.groups">
        <field name="name">PB Confirm</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
    </record>

    <record id="group_kpayment_approver_batch_pre_approve" model="res.groups">
        <field name="name">PB Pre-Approver</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
    </record>
    <record id="group_kpayment_approver_batch_approve" model="res.groups">
        <field name="name">PB Approver</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
    </record>
   

    <record id="group_kpayment_notify_disbursements_collections" model="res.groups">
        <field name="name">Notify(Disbursements)</field>
        <field name="category_id" ref="module_category_kpayment_approvers" />
    </record>
    
   


</odoo>