<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    <record id="mail_template_account_request_approved" model="mail.template">
        <field name="name">Account Request</field>
        <field name="model_id" ref="base.model_res_users" />
        <field name="subject">Notification: Account Request Approved</field>
        <field name="email_to">{{ object.email_formatted }}</field>
        <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted)}}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True" />
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; font-size: 13px;"> Dear <t t-out="object.name or ''">Marc Demo</t>,<br /><br /> Your mpesa account request has been approved.
                You can now officially receive payments on the account number below: <br />
                <ul>
                    <li>  
                        <span style="font-weight: bold;">
                            Account Number:</span>
                        <t t-out="ctx.get('requested_account_no')" />
                    </li>
                     <li>  
                        <span style="font-weight: bold;">
                            PayBill Number:</span>
                        4455890
                    </li>
                   
                    
                </ul>
            If you do not expect this, you can safely ignore this email.<br /><br /> Thanks. </div>
        </field>
    </record>
    <record id="mail_template_account_request_rejected" model="mail.template">
        <field name="name">Account Request</field>
        <field name="model_id" ref="base.model_res_users" />
        <field name="subject">Notification: Account Request Rejected</field>
        <field name="email_to">{{ object.email_formatted }}</field>
        <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted)}}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True" />
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; font-size: 13px;"> Dear <t t-out="object.name or ''">Marc Demo</t>,<br /><br /> Your mpesa account request has been rejected.
                Below is the reason for rejection: <br />
                <ul>
                    <li>
                        <span style="font-weight: bold;">
                            Account Number:</span>
                        <t t-out="ctx.get('requested_account_no')" />
                    </li>
                    <li>
                        <span style="font-weight: bold;">
                            Reason:</span>
                        <t t-out="ctx.get('reason_for_reject')" />
                    </li>
                   
                    
                </ul>
            If you do not expect this, you can safely ignore this email.<br /><br /> Thanks. </div>
        </field>
    </record>
    
    </data>
</odoo>
