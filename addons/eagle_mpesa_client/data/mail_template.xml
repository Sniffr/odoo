<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_wallet_authorization_code" model="mail.template">
            <field name="name">Authorization: Funds Request</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="subject">Your money allocation authorization code</field>
            <field name="email_to">{{ object.email_formatted }}</field>
            <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted)}}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;"> Dear <t
                        t-out="object.partner_id.name or ''"></t><br /><br />
                <p>Here is your money allocation authorization code</p>
                <div style="margin: 16px 0px 16px 0px; text-align: center;">
                        <span t-out="ctx.get('code')"
                            style="background-color:#faf9fa; border: 1px solid #dad8de; padding: 8px 16px 8px 16px; font-size: 24px; color: #875A7B; border-radius: 5px;" />
                    </div>
              

    <small style="text-align: center;">Please
                    note that this code expires in 3 minutes.</small>

    <p
                        style="margin: 16px 0px 16px 0px;">
                        If you did NOT initiate this transaction,
                        you should immediately change your password to ensure account security.
                    </p>

                </div>
            </field>
        </record>

