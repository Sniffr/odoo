<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pos_payment_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.view.form.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button groups="base.group_no_one" string="Compute TXN IDS" name="compute_mpesa_txn" type="object" class="oe_highlight" />
                </header>

            </xpath>

            <field name="transaction_id" position="after">
                <field name="mpesa_money_id" />
            </field>
        </field>
    </record>


    <record id="view_pos_payment_list_inherit" model="ir.ui.view">
        <field name="name">pos.payment.view.list.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_tree" />
        <field name="arch" type="xml">
            <field name="payment_method_id" position="after">
                <field name="mpesa_money_id" />
            </field>

        </field>
    </record>

</odoo>