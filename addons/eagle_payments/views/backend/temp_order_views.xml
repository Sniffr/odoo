<odoo>
  <record id="action_temp_order" model="ir.actions.act_window">
    <field name="name">Temporary Orders</field>
    <field name="res_model">temp.order</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem name="Temporary Orders" id="temp_order_menu"
    parent="point_of_sale.menu_point_of_sale"
    action="action_temp_order"
    sequence="16"
    groups="base.group_no_one"
  />


  <record id="temp_orders_list_view" model="ir.ui.view">
    <field name="name">Temporary Orders</field>
    <field name="model">temp.order</field>
    <field name="priority" eval="16" />
    <field name="arch" type="xml">

      <list string="Temporary Orders">
        <header>
          <button name="action_validate_payment" type="object" string="Validate Payment" class="oe_highlight" />
        </header>
        <field name="name" />
        <field name="employee_id" />
        <field name="create_uid" />
        <field name="transaction_id" groups="base.group_system" />
        <field name="state" />
      </list>

    </field>
  </record>

  <record id="temp_order_form" model="ir.ui.view">
    <field name="name">Temporary Order Form View</field>
    <field name="model">temp.order</field>
    <field name="arch" type="xml">

      <form action="">
        <header>
          <button string="Validate Payment" name="action_validate_payment" type="object" class="oe_highlight"
            invisible="state != 'draft'" />
          <field name="state" widget="statusbar" statusbar_visible="draft,created" readonly="1" />
        </header>
        <sheet>
          <!-- <div class="oe_title">
                <span class="o_form_label">Account Deletion Request </span>
                <h1 class="d-flex">
                    <field name="name" readonly="1"/>
                </h1>
              </div> -->
          <group>

            <field name="create_uid" />
            <field name="employee_id" />
            <field name="create_date" />
            <field name="amount" />
            <field name="transaction_id" groups="base.group_system" />
          </group>


        </sheet>
         <chatter />
      </form>

    </field>
  </record>


</odoo>