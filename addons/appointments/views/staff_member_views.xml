<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_appointments" model="ir.ui.view">
            <field name="name">res.partner.form.appointments</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_bookable"/>
                    <field name="specialization" invisible="not is_bookable"/>
                    <field name="available_hours" invisible="not is_bookable"/>
                    <field name="website_url" invisible="not is_bookable" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_bookable_staff_tree" model="ir.ui.view">
            <field name="name">bookable.staff.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list string="Bookable Staff">
                    <field name="name"/>
                    <field name="specialization"/>
                    <field name="available_hours"/>
                    <field name="is_bookable"/>
                    <field name="website_url"/>
                </list>
            </field>
        </record>

        <record id="view_bookable_staff_search" model="ir.ui.view">
            <field name="name">bookable.staff.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Bookable Staff">
                    <field name="name"/>
                    <field name="specialization"/>
                    <filter string="Bookable" name="bookable" 
                            domain="[('is_bookable', '=', True)]"/>
                    <filter string="Not Bookable" name="not_bookable" 
                            domain="[('is_bookable', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Bookable Status" name="group_bookable" 
                                context="{'group_by': 'is_bookable'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_bookable_staff" model="ir.actions.act_window">
            <field name="name">Bookable Staff</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('is_bookable', '=', True)]</field>
            <field name="context">{'default_is_bookable': True}</field>
            <field name="search_view_id" ref="view_bookable_staff_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first bookable staff member!
                </p>
                <p>
                    Mark staff members as bookable to allow customers to book appointments with them on your website.
                </p>
            </field>
        </record>

        <menuitem id="menu_appointments_main" 
                  name="Appointments" 
                  web_icon="appointments,static/description/icon.png"
                  sequence="10"/>
        
        <menuitem id="menu_bookable_staff" 
                  name="Bookable Staff" 
                  parent="menu_appointments_main" 
                  action="action_bookable_staff" 
                  sequence="10"/>
    </data>
</odoo>
