<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Category List View -->
    <record id="service_category_list_view" model="ir.ui.view">
        <field name="name">service.category.list</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="service_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Service Category Form View -->
    <record id="service_category_form_view" model="ir.ui.view">
        <field name="name">service.category.form</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                        <button type="object" name="action_view_services" class="oe_stat_button" icon="fa-list">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Services">
                            <field name="service_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="duration"/>
                                    <field name="is_bookable"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Category Action -->
    <record id="service_category_action" model="ir.actions.act_window">
        <field name="name">Service Categories</field>
        <field name="res_model">service.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service category!
            </p>
            <p>
                Organize your services into categories for better management.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="service_categories_menu" 
              name="Service Categories" 
              parent="services_main_menu"
              action="service_category_action"
              sequence="20"/>
</odoo>
