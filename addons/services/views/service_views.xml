<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service List View -->
    <record id="service_list_view" model="ir.ui.view">
        <field name="name">company.service.list</field>
        <field name="model">company.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="currency_id"/>
                <field name="duration"/>
                <field name="is_bookable"/>
                <field name="website_published"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Service Form View -->
    <record id="service_form_view" model="ir.ui.view">
        <field name="name">company.service.form</field>
        <field name="model">company.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="currency_id"/>
                            <field name="duration" widget="float_time"/>
                            <field name="duration_minutes" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Booking Settings">
                            <group>
                                <group>
                                    <field name="is_bookable"/>
                                    <field name="website_published"/>
                                    <field name="requires_approval"/>
                                    <field name="max_advance_booking"/>
                                </group>
                                <group>
                                    <field name="preparation_time" widget="float_time"/>
                                    <field name="cleanup_time" widget="float_time"/>
                                    <field name="sequence"/>
                                </group>
                            </group>
                        </page>
                        <page string="Staff Requirements">
                            <group>
                                <field name="requires_specific_staff"/>
                                <field name="allowed_staff_ids" widget="many2many_tags" 
                                       invisible="requires_specific_staff == False"/>
                            </group>
                        </page>
                        <page string="Customer Information">
                            <field name="customer_notes" placeholder="Instructions or information for customers..."/>
                        </page>
                        <page string="Internal Notes">
                            <field name="notes" placeholder="Internal notes for staff..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Action -->
    <record id="service_action" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">company.service</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service!
            </p>
            <p>
                Define the services your company offers with pricing and booking settings.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="services_main_menu" 
              name="Services" 
              sequence="15"/>
    
    <menuitem id="services_menu" 
              name="Services" 
              parent="services_main_menu"
              action="service_action"
              sequence="10"/>
</odoo>
